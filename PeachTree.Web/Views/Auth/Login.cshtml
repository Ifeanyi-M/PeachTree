@model LoginRequestDTO

<form method="post">
	<div class="card shadow  border-primary-subtle  p-4 pt-4 m-auto mt-5 w-50   ">
		<div class="card-header bg-success-subtle  ml-0 py-3 px-3">
		<div class="row text-center mt-3" >
			<h2>Login</h2>
		</div>
		</div>
	
		<div class="row">
			<div class="col-12 col-md-6 offset-md-3 pb-2">
				<input asp-for="UserName" class="form-control" placeholder="Enter username ..."/>
				<span asp-validation-for="UserName" class="text-danger" />
			</div>
			<div class="col-12 col-md-6 offset-md-3 pb-2">
				<input asp-for="Password" class="form-control" placeholder="Enter password ..." />
				<span asp-validation-for="Password" class="text-danger" />
			</div>
			<div class="col-6 offset-3 pb-2">
				<button type="submit" class="form-control btn btn-outline-success" value="Submit">Login</button>
			</div>
		</div>
	</div>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}